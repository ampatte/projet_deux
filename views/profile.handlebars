<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Idear:</h3>

    <form class="form new-idea-form">
      <div class="form-group">
        <label for="idea-text">idear:</label>
        <textarea class="form-input" id="idea-text" name="idea-text"></textarea>
      </div>
      <div class="form-group">
        <label for="choice-1">enter up to 5 choices:</label>
        <input class="form-input" id="choice-1" name="choice-1"></input>  
        <input class="form-input" id="choice-2" name="choice-2"></input>
        <input class="form-input" id="choice-3" name="choice-3"></input>
        <input class="form-input" id="choice-4" name="choice-4"></input>
        <input class="form-input" id="choice-5" name="choice-5"></input>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if ideas.length}}
  <div class="col-md-6 idea-list">
    <h3>Current Idears:</h3>

    {{#each ideas as |idea|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/idea/{{idea.id}}">{{idea.idea}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{idea.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
